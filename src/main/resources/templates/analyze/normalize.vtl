<h2 class="alert alert-info">Normalize a Relation!</h2>

#if( !$relations.isEmpty() )

  #parse( $normalize-result )

  <form action="/esit/dbdstudio/normalize" method="POST">
    <h4>Normal Forms</h4>
    <ul class="list-group">
      <li class="list-group-item">
        <label class="radio-inline">
          <input name="__nf__" value="3rd" type="radio">3rd Normal Form
        </label>
      </li>
      <li class="list-group-item">
        <label class="radio-inline">
          <input name="__nf__" value="bc" type="radio">Boyce-Codd Normal Form
        </label>
      </li>
    </ul>

    #parse( $relations-list-radio )

    <button type="button" onclick="checkNormalFormTest()" class="btn">Go!</button>
  </form>

#else
  <h2 class="alert alert-danger">Add some Relations!</h2>
#end